#!/usr/bin/env bash

#COLOR DEFINITIONS
R=$(printf '\033[0;31m')
Y=$(printf '\033[0;33m')
B=$(printf '\033[0;34m')
N=$(printf '\033[0m')
W=$(printf '\033[0;37m')

: '
cat << EOF
      ${B}n################################################
      ${B}n##########/********#/******#*********###########
      ${B}n##########(/*#*/**(#(***/##(**(###(**(##########
      ${B}n#########(***(//**(#(***###***/###****##########
      ${B}n#########****(****/#(***###****/(****/##########
      ${B}n##########(//(*#(((##(//######/(/(/#######(*.      .
      ${B}n#############################* ,(#################
      n####################, (######################## 
   n###### ########### .############(. 
       (#####/##( /#######/   (
         . ########,
             ,
EOF
'

function get_info(){
	#username, computer, OS, Host, Kernel, Uptime, Packages, Shell, Resolution, DE, WM, WM Theme, Theme, Icons, Terminal, CPU, GPU, Memory
	#some addons -> GPU Driver, Disk, Battery, type, Public IP
	
	if [[ "$OSTYPE" == "linux-gnu" ]]; then
		#linux part
		
		if [ -f /etc/os-release ]; then
			. /etc/os-release
			os=$NAME
			kernel=$VERSION_ID
		else
			os=$(uname -s)
			kernel=$(uname -r)
		fi		

		user=$(whoami)
		host=$(hostname)
		
		uptime=$(uptime -p)
		shell=$SHELL
		
	else
		echo "ERROR: You have different system other than linux, Weirdo."
	fi
}

#main
get_info
topbar="${R}$users${W}@${R}$host"
topbar_len=${#topbar}

cat << EOF

       ${B}*#################################################################*
       ${B}*################${Y}*(/**/(/(${B}####${Y}//*${B}#${Y}/**${B}(####${Y}*${B}/((((${Y}*${B}#################*
       ${B}*##############${Y}(**********/(${B}#${Y}(********//***********/${B}##############*
       ${B}*##############/(//#${Y}(*(****/${B}#${Y}(****(${B}(##${Y}(****(${B}###${Y}/****/${B}#############*
       ${B}*##############${Y}(******/****/${B}#${Y}(****(${B}###${Y}/***/${B}#####${Y}/***(${B}#############*
       ${B}*#############${Y}/***/${B}###${Y}(****/${B}#${Y}(****(${B}###${Y}/****/${B}###${Y}/****/${B}#############*
       ${B}*#############${Y}/************/${B}#${Y}(****(${B}####${Y}/***********/${B}##############*
       ${B}*###############${Y}(*//*/#/(/(${B}###${Y}*(*${B}#########/${Y}*(((*${B}(########(*.     ${R} ..,,*  
       ${B}*##########################################/. ${R}./(####################
       ${B}*#################################/  ${R}*#############################.
      ${R}*##( ${B}/######################* ${R}.(#############################(((((.
${R}, *########## ${B}#############* ${R}.################*
    ${R}.  *#######,${B}(#####. ${R}/##########(,
         ${R}(  #####, ,########,
               ${R}.######/

topbar

${N}
EOF
